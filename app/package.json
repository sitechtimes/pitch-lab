{
  "name": "tuner",
  "description": "All-in-one tuner app: metronome, recorder, and accurate tuner. Fast, simple, and perfect for all musicians!",
  "author": "Evan Gao",
  "version": "0.0.0",
  "private": true,
  "type": "module",
  "main": "electron-main.js",
  "scripts": {
    "dev": "concurrently \"cross-env NODE_ENV=development vite\" \"cross-env NODE_ENV=development electron electron-main.js\"",
    "build": "vite build",
    "start": "electron electron-main.js",
    "clean": "rimraf dist dist-electron",
    "dist": "npm run build && electron-builder",
    "preview": "vite preview",
    "lint": "eslint . --fix",
    "format": "prettier --write src/"
  },
  "build": {
    "appId": "com.example.pitchlab",
    "productName": "PitchLab",
    "files": [
      "dist/**/*",
      "electron-main.js"
    ],
    "directories": {
      "buildResources": "build"
    },
    "win": {
      "target": "nsis",
      "icon": "build/icon.ico"
    },
    "mac": {
      "target": "dmg",
      "icon": "build/icon.icns"
    }
  },
  "dependencies": {
    "daisyui": "^4.12.14",
    "pinia": "^2.2.6",
    "pinia-plugin-persistedstate": "^4.1.3",
    "pitchfinder": "^2.3.2",
    "pitchy": "^4.1.0",
    "tone": "^15.0.4",
    "vue": "^3.5.12",
    "vue-router": "^4.4.5",
    "web-audio-api": "^0.2.2"
  },
  "devDependencies": {
    "@eslint/js": "^9.14.0",
    "@vitejs/plugin-vue": "^5.2.3",
    "@vue/eslint-config-prettier": "^10.1.0",
    "autoprefixer": "^10.4.20",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^35.1.5",
    "electron-builder": "^26.0.12",
    "eslint": "^9.14.0",
    "eslint-plugin-vue": "^9.30.0",
    "postcss": "^8.4.49",
    "rimraf": "^6.0.1",
    "tailwindcss": "^3.4.15",
    "vite": "^5.4.10",
    "vite-plugin-electron": "^0.29.0",
    "vite-plugin-vue-devtools": "^7.5.4",
    "wait-on": "^8.0.3"
  }
}
